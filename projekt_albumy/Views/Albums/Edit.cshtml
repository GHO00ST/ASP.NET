@model projekt_albumy.Models.Album

@{
    ViewData["Title"] = "Albumy";
}

<h1>Edytuj Album</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"> Nazwa Albumu </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"> Rok Wydania</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BandId" class="control-label"> Zespół </label>
                <select asp-for="BandId" class="form-control" asp-items="@(new SelectList(ViewBag.Bands, "Key", "Value"))"></select>
                <span asp-validation-for="BandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusicTypeId" class="control-label"> Gatunek </label>
                <select asp-for="MusicTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.MusicTypes, "Key", "Value"))"></select>
                <span asp-validation-for="MusicTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
