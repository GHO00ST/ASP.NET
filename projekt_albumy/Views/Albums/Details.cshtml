@model projekt_albumy.Models.Album

@{
    ViewData["Title"] = "Albumy";
}

<h1>Szczegóły Albumu</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa Albumu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Rok Wydania
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Zespół
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Band.Name)
        </dd>
        <dt class = "col-sm-2">
            Gatunek
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MusicType.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Moderator"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id"> Edytuj |</a>
    }
    <a asp-action="Index">Powrót</a>
</div>
