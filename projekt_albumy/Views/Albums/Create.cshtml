@model projekt_albumy.Models.Album

@{
    ViewData["Title"] = "Albumy";
}

<h1>Dodaj Album</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"> Nazwa Albumu </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"> Rok Wydania </label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BandId" class="control-label"> Nazwa Zespołu </label>
                <select asp-for="BandId" class ="form-control" asp-items="@(new SelectList(ViewBag.Bands, "Key", "Value"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="MusicTypeId" class="control-label"> Nazwa Gatunku </label>
                <select asp-for="MusicTypeId" class ="form-control" asp-items="@(new SelectList(ViewBag.MusicTypes, "Key", "Value"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
