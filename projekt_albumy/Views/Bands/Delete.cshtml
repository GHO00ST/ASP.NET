@model projekt_albumy.Models.Band

@{
    ViewData["Title"] = "Zespoły";
}

<h1>Usuń Zespół</h1>

<h3>Czy jesteś pewien że chcesz usunąć ten Zespół?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa Zespołu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
